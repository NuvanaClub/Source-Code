{
  "name": "weed-wiki",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/switch-db.js && next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "postinstall": "prisma generate",
    "db:push": "node scripts/switch-db.js && prisma db push",
    "db:seed": "node prisma/seed.js",
    "db:migrate": "node scripts/switch-db.js && prisma migrate deploy",
    "db:migrate-prod": "node scripts/migrate-production.js",
    "db:studio": "node scripts/switch-db.js && prisma studio",
    "db:switch-sqlite": "node -e \"require('fs').copyFileSync('prisma/schema.sqlite.prisma', 'prisma/schema.prisma')\"",
    "db:switch-postgres": "node -e \"require('fs').copyFileSync('prisma/schema.prisma', 'prisma/schema.prisma')\"",
    "vercel-build": "prisma generate && prisma migrate deploy && node scripts/seed-production.js && next build"
  },
  "dependencies": {
    "@prisma/client": "5.10.2",
    "@vercel/og": "^0.0.21",
    "aws-sdk": "^2.1490.0",
    "bcryptjs": "2.4.3",
    "date-fns": "^4.1.0",
    "jspdf": "^2.5.1",
    "next": "^14.2.32",
    "next-auth": "^4.24.11",
    "node-fetch": "^3.3.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "^2.8.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "autoprefixer": "10.4.20",
    "postcss": "8.4.41",
    "prisma": "5.10.2",
    "tailwindcss": "3.4.10"
  }
}
